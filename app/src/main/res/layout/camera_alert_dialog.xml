<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    app:layout_constraintCircleRadius="20dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">



        <RelativeLayout
            android:id="@+id/btn_gallery"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginRight="7dp"
            android:clickable="true"
            android:focusable="true"
            android:textAllCaps="false">
            <ImageView
                android:id="@+id/galleryy"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_baseline_photo_camera_24"
                android:src="@drawable/ic_image_black_24dp" />

            <TextView
                android:id="@+id/txt_dia1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/galleryy"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Gallery"
                android:textColor="#666666"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_camera"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginRight="7dp"
            android:clickable="true"
            android:focusable="true"
            android:textAllCaps="false">

            <ImageView
                android:id="@+id/cameraa"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/camera_border"
                android:src="@drawable/ic_camera_enhance_black_24dp" />

            <TextView
                android:id="@+id/txt_dia2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cameraa"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Camera"
                android:textColor="#666666"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>