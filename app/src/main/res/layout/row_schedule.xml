<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_main"
            app:layout_constraintTop_toTopOf="parent"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp">
    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

        <TextView
                android:id="@+id/txt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:visibility="gone"
                android:layout_gravity="end"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/darker_grotesque_semibold"
                android:textColor="@color/b_blue_text" />

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ShaktiNew"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/darker_grotesque_semibold"
                    android:textColor="@color/b_blue_text" />

            <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1,231.00"
                    style="@style/TextTitleStyle"
                    android:gravity="end"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/darker_grotesque_semibold"
                   />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/txt_schedule"
                    style="@style/TextTitleStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Date"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/darker_grotesque_semibold"
                    />

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="demo"
                    android:id="@+id/txt_reference"
                    android:gravity="end"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/darker_grotesque_semibold"
                     />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022-09-2"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_gravity="start"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/darker_grotesque_semibold"
                />

        <TextView
                android:id="@+id/txt_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_gravity="end"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/b_blue_text"
                android:fontFamily="@font/darker_grotesque_semibold"
                />
    </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
</layout>