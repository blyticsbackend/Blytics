<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

 <FrameLayout

     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <androidx.constraintlayout.motion.widget.MotionLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/motionPillCards"
      app:layoutDescription="@xml/fragment_security_question_screen"
      tools:context=".modules.apps.AppsFragment">
   <com.google.android.material.card.MaterialCardView
       android:id="@+id/pillCard1"
       android:layout_width="0dp"
       android:layout_height="@dimen/_150sdp"
       app:cardCornerRadius="8dp"
       app:cardElevation="8dp"
       android:layout_marginTop="@dimen/_80sdp"
       app:cardPreventCornerOverlap="false"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"          >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     <ImageView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:adjustViewBounds="true"
         android:scaleType="fitXY"
         android:src="@drawable/img_3"/>


     <TextView
         android:id="@+id/txt_header_1"
         android:layout_marginTop="@dimen/_3sdp"
         android:fontFamily="@font/opensans_bold"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textColor="@android:color/white"
         android:layout_marginBottom="@dimen/_5sdp"
         app:layout_constraintTop_toTopOf="parent"
         android:visibility="gone"
         android:text="Financial Charges"
         />

     <TextView
         android:id="@+id/txt_title_1"
         android:fontFamily="@font/opensans_bold"
         android:textSize="@dimen/_14sdp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:text="Financial Charges"
         android:textColor="@android:color/white"
         android:layout_marginBottom="@dimen/_5sdp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         />


     <TextView
         android:id="@+id/txt_value_1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:fontFamily="@font/opensans_regular"
         android:textSize="@dimen/_12sdp"
         android:text="Financial Charges"
         android:textColor="@android:color/white"
         android:layout_marginBottom="@dimen/_5sdp"
         app:layout_constraintBottom_toTopOf="@id/txt_title_1"
         />
    </androidx.constraintlayout.widget.ConstraintLayout>


   </com.google.android.material.card.MaterialCardView>
   <com.google.android.material.card.MaterialCardView
       android:id="@+id/pillCard2"
       android:layout_width="match_parent"
       android:layout_height="@dimen/_150sdp"
       app:cardCornerRadius="8dp"
       app:cardElevation="7dp"
       android:layout_marginHorizontal="@dimen/_5sdp"
       android:layout_marginTop="@dimen/_70sdp"
       app:layout_constraintEnd_toEndOf="@+id/guideline_vertical_end"
       app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
       app:layout_constraintTop_toTopOf="parent"
       >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     <ImageView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:adjustViewBounds="true"
         android:scaleType="fitXY"
         android:src="@drawable/img_2"/>

     <TextView
         android:id="@+id/txt_header_2"
         android:layout_marginTop="@dimen/_3sdp"
         android:fontFamily="@font/opensans_bold"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textColor="@android:color/white"
         android:layout_marginBottom="@dimen/_5sdp"
         app:layout_constraintTop_toTopOf="parent"
         android:visibility="visible"
         android:text="Operational Charges"

         />


     <TextView
         android:id="@+id/txt_title_2"
         android:fontFamily="@font/opensans_bold"
         android:textSize="@dimen/_14sdp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textColor="@android:color/white"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         />


     <TextView
         android:id="@+id/txt_value_2"
         android:fontFamily="@font/opensans_regular"
         android:textSize="@dimen/_12sdp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textStyle="bold"
         android:visibility="visible"
         android:layout_marginTop="5dp"
         android:textColor="@android:color/white"
         android:layout_marginBottom="@dimen/_5sdp"
         android:text="Operational Charges"
         app:layout_constraintBottom_toTopOf="@id/txt_title_2"
         />

    </androidx.constraintlayout.widget.ConstraintLayout>
   </com.google.android.material.card.MaterialCardView>


   <com.google.android.material.card.MaterialCardView
       android:id="@+id/pillCard3"
       android:layout_width="match_parent"
       android:layout_height="@dimen/_150sdp"
       app:cardCornerRadius="8dp"
       app:cardElevation="6dp"
       android:layout_marginHorizontal="@dimen/_10sdp"
       android:layout_marginTop="@dimen/_60sdp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
     <ImageView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:adjustViewBounds="true"
         android:scaleType="fitXY"
         android:src="@drawable/img_1"/>


     <TextView
         android:id="@+id/txt_header_3"
         android:layout_marginTop="@dimen/_3sdp"
         android:fontFamily="@font/opensans_bold"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textColor="@android:color/white"
         android:layout_marginBottom="@dimen/_5sdp"
         app:layout_constraintTop_toTopOf="parent"
         android:visibility="gone"
         android:text="Notification Charges"
         />
     <TextView
         android:id="@+id/txt_title_3"
         android:fontFamily="@font/opensans_bold"
         android:textSize="@dimen/_14sdp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"

         android:textColor="@android:color/white"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         />


     <TextView
         android:id="@+id/txt_value_3"
         android:fontFamily="@font/opensans_regular"
         android:textSize="@dimen/_12sdp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textStyle="bold"
         android:layout_marginTop="5dp"
         android:textColor="@android:color/white"
         android:layout_marginBottom="@dimen/_5sdp"
         android:text="Notification Charges"
         app:layout_constraintBottom_toTopOf="@id/txt_title_3"
         />

    </androidx.constraintlayout.widget.ConstraintLayout>
   </com.google.android.material.card.MaterialCardView>

   <com.google.android.material.card.MaterialCardView
       android:id="@+id/pillCard4"
       android:layout_width="match_parent"
       android:layout_height="@dimen/_150sdp"
       app:cardCornerRadius="8dp"
       app:cardElevation="5dp"
       android:layout_marginHorizontal="@dimen/_15sdp"
       android:layout_marginTop="@dimen/_50sdp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
     <ImageView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:adjustViewBounds="true"
         android:scaleType="fitXY"
         android:src="@drawable/img_4"/>

     <TextView
         android:id="@+id/txt_header_4"
         android:layout_marginTop="@dimen/_3sdp"
         android:fontFamily="@font/opensans_bold"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textColor="@android:color/white"
         android:layout_marginBottom="@dimen/_5sdp"
         app:layout_constraintTop_toTopOf="parent"
         android:visibility="gone"
         android:text="Security Charges"
         />

     <TextView
         android:id="@+id/txt_title_4"
         android:fontFamily="@font/opensans_bold"
         android:textSize="@dimen/_14sdp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textColor="@android:color/white"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         />


     <TextView
         android:id="@+id/txt_value_4"
         android:fontFamily="@font/opensans_regular"
         android:textSize="@dimen/_12sdp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:textStyle="bold"
         android:layout_marginTop="5dp"
         android:textColor="@android:color/white"
         android:layout_marginBottom="@dimen/_5sdp"
         android:text="Security Charges"
         app:layout_constraintBottom_toTopOf="@id/txt_title_4"
         />

    </androidx.constraintlayout.widget.ConstraintLayout>
   </com.google.android.material.card.MaterialCardView>

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guideline"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintGuide_begin="@dimen/_350sdp" />


   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guideline_vertical_start"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:orientation="vertical"
       app:layout_constraintGuide_percent="0.05" />
   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guideline_vertical_end"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:orientation="vertical"
       app:layout_constraintGuide_percent="0.95"/>

  </androidx.constraintlayout.motion.widget.MotionLayout>
  <com.google.android.material.card.MaterialCardView
      android:layout_width="match_parent"
      android:id="@+id/card_front"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginTop="@dimen/_230sdp"
      android:layout_height="match_parent">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  <androidx.appcompat.widget.LinearLayoutCompat
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/cons_notification"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:visibility="gone"
       android:paddingTop="@dimen/_8sdp"
       app:layout_constraintBottom_toBottomOf="parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lyt_sms"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
     <LinearLayout
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         android:orientation="vertical">

     <TextView
         android:layout_width="match_parent"
         android:layout_weight="1"
         android:layout_height="0dp"
         android:textSize="@dimen/_12sdp"
         android:text="SMS"
         android:fontFamily="@font/opensans_bold"
         style="@style/TextTitleStyle"/>
      <TextView
          android:layout_width="match_parent"
          android:textSize="@dimen/_12sdp"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:text="0.00366$/Notification"
          android:fontFamily="@font/opensans_bold"
          style="@style/TextTitleStyle"/>
     </LinearLayout>

     <Switch
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:checked="true"
         android:id="@+id/btn_sw_sms"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/lyt_sms"
        android:background="@color/gray_dark"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lyt_whatsapp"
        android:layout_width="match_parent"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:layout_height="@dimen/_50sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/view_3"
        android:orientation="horizontal">
     <LinearLayout
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         android:orientation="vertical">

     <TextView
         android:layout_width="wrap_content"
         android:layout_weight="1"
         android:layout_height="0dp"
         android:textSize="@dimen/_12sdp"
         android:text="WhatsApp"
         android:fontFamily="@font/opensans_bold"
         style="@style/TextTitleStyle"/>

      <TextView
          android:layout_width="match_parent"
          android:textSize="@dimen/_12sdp"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:text="0.00366$/Notification"
          android:fontFamily="@font/opensans_bold"
          style="@style/TextTitleStyle"/>
     </LinearLayout>

     <Switch
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:id="@+id/btn_sw_whatsapp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:id="@+id/view_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/lyt_whatsapp"
        android:background="@color/gray_dark"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lyt_default"
        android:layout_width="match_parent"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:layout_height="@dimen/_50sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/view_4"
        android:orientation="horizontal">
     <LinearLayout
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="match_parent"
         android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:textSize="@dimen/_12sdp"
          android:text="Email"
          android:fontFamily="@font/opensans_bold"
          style="@style/TextTitleStyle"/>


      <TextView
          android:layout_width="match_parent"
          android:textSize="@dimen/_12sdp"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:text="0.00366$/Notification"
          android:fontFamily="@font/opensans_bold"
          style="@style/TextTitleStyle"/>
     </LinearLayout>



     <Switch
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:id="@+id/btn_sw_email"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:id="@+id/view_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/lyt_default"
        android:background="@color/gray_dark"/>

   </androidx.constraintlayout.widget.ConstraintLayout>



  </androidx.appcompat.widget.LinearLayoutCompat>
  </ScrollView>
  </com.google.android.material.card.MaterialCardView>

</FrameLayout>

</layout>